<resources>

    <!-- Base Theme -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Attributes for all APIs -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlHighlight">@color/selector_black_pressed</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="ReviewEdittext" parent="Widget.AppCompat.EditText">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="colorControlNormal">@color/light_black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>

    <style name="HintText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--theme for the actionbar-->
    <style name="MyToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Used to for the title of the Toolbar -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Used to for the title of the Toolbar when parent is Theme.AppCompat.Light -->
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <!-- Used to color the text of the action menu icons -->
        <item name="android:textColorSecondary">@color/black</item>
        <!-- Used to color the overflow menu icon -->
        <item name="actionMenuTextColor">#000</item>
        <!-- Color of the Toolbar -->
        <item name="android:background">@color/colorPrimary</item>
        <!-- Color of the Toolbar title -->
        <item name="titleTextColor">@color/black</item>
        <!--add the search view theme in the toolbar theme-->
        <!--<item name="searchViewStyle">@style/SearchViewTheme</item>-->
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Date.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>


    <!--Just for just-->
    <!-- Light App Bar Theme -->
    <style name="AppTheme.AppBar.Light" parent="ThemeOverlay.AppCompat.ActionBar">
    </style>

    <!-- Dark App Bar Theme -->
    <style name="AppTheme.AppBar.Dark" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>


    <!-- Light Overlay Theme -->
    <style name="AppTheme.Overlay.Light" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <!-- Dark Overlay Theme -->
    <style name="AppTheme.Overlay.Dark" parent="ThemeOverlay.AppCompat.Dark">
    </style>


    <!-- Button Styles -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
    </style>

    <style name="ButtonStyle.NoRaise">
        <!-- Pre API 21 has no raise effect by default -->
    </style>

    <style name="ButtonStyle.Colored" parent="Widget.AppCompat.Button.Colored">
    </style>

    <style name="ButtonStyle.Colored.NoRaise">
        <!-- Pre API 21 has no raise effect by default -->
    </style>

    <style name="ButtonStyle.Borderless" parent="Widget.AppCompat.Button.Borderless">
    </style>

    <style name="ButtonStyle.Borderless.ColoredText" parent="Widget.AppCompat.Button.Borderless.Colored">
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
    </style>

    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
    </style>

    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
    </style>

    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
    </style>

    <!-- Selectable Item Styles -->
    <style name="SelectableItemStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Text Styles -->
    <style name="TextStyle" parent="TextAppearance.AppCompat">
    </style>

    <style name="TextStyle.Title" parent="TextAppearance.AppCompat.Title">
    </style>

    <style name="TextStyle.Body1" parent="TextAppearance.AppCompat.Body1">
    </style>

    <style name="TextStyle.Body2" parent="TextAppearance.AppCompat.Body2">
    </style>

    <!-- Edit Text Styles -->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
    </style>

    <!-- Spinner Styles -->
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
    </style>

    <style name="SpinnerStyle.Underlined" parent="Widget.AppCompat.Spinner.Underlined">
    </style>

    <!-- Progress Bar Styles -->
    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
    </style>

    <style name="ProgressBarStyle.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
    </style>

    <!-- Slider Styles -->
    <style name="SeekbarStyle" parent="Widget.AppCompat.SeekBar">
    </style>

    <!-- Image Styles -->
    <style name="ImageStyle">
    </style>

    <style name="ImageStyle.Colored">
        <item name="android:tint">?colorAccent</item>
    </style>

    <!-- Card Styles -->
    <style name="CardStyle" parent="CardView.Light">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="CardStyle.Home">
        <item name="contentPaddingBottom">@dimen/content_spacing_vertical</item>
        <item name="contentPaddingLeft">@dimen/content_spacing_horizontal</item>
        <item name="contentPaddingRight">@dimen/content_spacing_horizontal</item>
        <item name="contentPaddingTop">@dimen/content_spacing_vertical</item>
        <item name="android:layout_marginBottom">@dimen/view_spacing_small</item>
        <item name="android:layout_marginLeft">@dimen/screen_spacing_horizontal</item>
        <item name="android:layout_marginRight">@dimen/screen_spacing_horizontal</item>
        <item name="android:layout_marginTop">@dimen/view_spacing_small</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
